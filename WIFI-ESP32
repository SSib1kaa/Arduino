#include <WiFi.h>   // стандартная WiFi‑библиотека для ESP32

// ДАННЫЕ ВАШЕЙ СЕТИ
const char* WIFI_SSID     = "MyWiFi";
const char* WIFI_PASSWORD = "MyPassword";

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println();
  Serial.println("ESP32 WiFi init...");
  
